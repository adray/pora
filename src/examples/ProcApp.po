import std;

namespace ProcApp {
    static void main() {
        println("Proceses:", (u32)10);
        process_list procs;        
        u32 count = findProcesses(&procs);
        
        process_list* item = procs.next;
        while (item != null) {
            process p = item.process;
            u8* name = p.name;
            u32 len = p.len;
            print_64((i64)p.pid);
            println(name, len);
            item = item.next;
        }
        freeProcesses(&procs);
        
        println("Done", (u32)5);
    }
}
