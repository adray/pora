namespace std
{
    class string
    {
        private u8* _chars;
        private i64 _size;

        //string(u8* str, i64 size);
        string(u8* str);

        u8 at(i64 pos);
        i64 size();
        u8* data();
    }

    //string::string(u8* str, i64 size) {
    //    _chars = str;
    //    _size = size;
    //}

    string::string(u8* str) {
        _chars = str;
        _size = strlen(str, (u32)65536);
    }

    u8 string::at(i64 pos) {
        if (pos < 0 ||
            pos >= _size) {
            return (u8)0;
        }

        u8[] arr = (u8[32])_chars;
        return arr[pos];
    }

    i64 string::size() {
        return _size;
    }

    u8* string::data() { 
        return _chars;
    }
}
