    static boolean parseInt(u8* str, u32 size, i64* ret) {
        //if (str == null || size == (u32)0) {
        //    return -1;
        //}
        
        u8[] arr = (u8[128])str;
        i64 value = 0;
        i64 count = 0;
        boolean negative = false;
        if (arr[0] == '-') {
            negative = true;
            count += 1;
        }
        
        while (arr[count] != 0b && count < (i64)size) {
            u8 val = arr[count];
            if (val < (u8)'0' || val > (u8)'9') { break; }
            value *= 10;
            
            value += (i64) (val - (u8)'0');
            count += 1;
        }
        
        if (negative) {
            value *= -1;
        }
        
        *ret = value;
        return true;
    }
