    // Gets the num of characters of a null terminated string.
    // @str The string
    // @size the size of the backing string array
    static i64 strlen(u8* str, u32 size)
    {
        //if (str == null || size >= (u32)128)
        //{
        //    return -1;
        //}
    
        u8[] arr = (u8[128])str;
    
        i64 count = 0;
        while (arr[count] != 0b && count < (i64)size) {
            count = count + 1;
        }
        
        return count;
    }
    
